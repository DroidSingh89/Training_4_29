<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.example.training_4_29">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:name=".TrainingApp"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true"
            tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.example.training_4_29.ui.activity.firebase.FirebaseActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.FragmentActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.NetworkActivity">
        </activity>

        <service android:name=".service.FirebaseService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <service
                android:name=".service.MyJobService"
                android:enabled="true"
                android:exported="true"
                android:permission="android.permission.BIND_JOB_SERVICE">
        </service>
        <service
                android:name=".service.MyBoundService"
                android:enabled="true"
                android:exported="true">
        </service>
        <service
                android:name=".service.MyIntentService"
                android:exported="false">
        </service>
        <service
                android:name=".service.MyNormalService"
                android:enabled="true"
                android:exported="true">
        </service>

        <activity android:name="com.example.training_4_29.ui.activity.ServiceActivity">
        </activity>

        <receiver
                android:name=".receiver.MyStaticReceiver"
                android:enabled="true"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.AIRPLANE_MODE">
                </action>
            </intent-filter>
        </receiver>

        <activity android:name="com.example.training_4_29.ui.activity.ReceiverActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.ThreadingActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.ProviderActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.StorageActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.ContainerActivity">
        </activity>
        <activity android:name="com.example.training_4_29.ui.activity.IntentsActivity">
        </activity>
        <activity
                android:name="com.example.training_4_29.ui.activity.LayoutActivity"
                android:configChanges="screenSize|orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>