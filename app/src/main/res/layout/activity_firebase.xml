<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.firebase.FirebaseActivity">

    <TextView
            android:id="@+id/tvLoginStatus"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            android:text="Signed out"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <EditText
            android:text="abc@abc.com"
            android:hint="Email"
            android:id="@+id/etEmail"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>
    <EditText
            android:text="abcabc1234"
            android:hint="Password"
            android:id="@+id/etPassword"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>

    <Button
            android:text="Create user"
            android:id="@+id/btnCreateUser"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>
    <Button
            android:text="Sign in"
            android:id="@+id/btnSignIn"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>
    <Button
            android:text="Sign out"
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>

    <!--real time database-->
    <EditText
            android:id="@+id/etFirebaseData"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:text="Save to cloud"
            android:id="@+id/btnFirebaseSave"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:text="Read from cloud"
            android:id="@+id/btnFirebaseRead"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvFirebaseData"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>