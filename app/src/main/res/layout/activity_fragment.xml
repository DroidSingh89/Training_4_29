<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.FragmentActivity">

    <fragment
            android:id="@+id/staticFragment"
            android:name="com.example.training_4_29.ui.fragment.StaticFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Add Fragment"
            android:id="@+id/btnAddFragment"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button
            android:text="Remove Fragment"
            android:id="@+id/btnRemoveFragment"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>


    <FrameLayout
            android:id="@+id/dynamicFragmentHolder"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <FrameLayout
            android:id="@+id/dynamicFragmentHolder2"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

</LinearLayout>