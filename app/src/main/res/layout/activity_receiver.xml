<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.ReceiverActivity">

    <EditText
            android:id="@+id/etReceiverContent" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:text="Send Broadcast"
            android:id="@+id/btnSendBroadcast" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:text="Send Broadcast Outside"
            android:id="@+id/btnSendBroadcastOutside" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvReceiverContent" android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



</LinearLayout>