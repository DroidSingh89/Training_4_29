<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.StorageActivity">

    <TextView
            android:text="Shared Preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/etSharedPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btnGetData"
            android:text="Get Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btnSaveData"
            android:text="Save Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/btnClearData"
            android:text="Clear Data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="SQLite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <!--Person Layout-->
    <include layout="@layout/person_input_layout"/>

    <Button
            android:id="@+id/btnSavePerson"
            android:text="Save Person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/btnGetAllPeople"
            android:text="Get All People"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ListView
            android:id="@+id/lvPersonList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</LinearLayout>